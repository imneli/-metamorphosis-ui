{
  "name": "metamorphosis-ui",
  "version": "0.1.7",
  "description": "A modern and accessible React component library",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "style": "dist/styles.css",
  "sideEffects": [
    "**/*.css"
  ],
  "private": false,
  "files": [
    "dist",
    "!**/*.test.*",
    "!**/__tests__/**"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles": {
      "import": "./dist/styles.css",
      "require": "./dist/styles.css"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsup"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "react-icons": "^5.0.0",
    "tailwind-merge": "^2.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "tailwindcss": ">=3.0.0"
  },
  "devDependencies": {
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "typescript": "^5",
    "tsup": "^8.0.0",
    "@swc/core": "^1.0.0",
    "rimraf": "^5.0.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16"
  }
}
